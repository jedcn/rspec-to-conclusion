#!/usr/bin/env node

var index = require("../index"),
    report = index.report,
    runToConclusion = index.runToConclusion,
    verifyPreConditions = index.verifyPreConditions;

if (!verifyPreConditions()) {
  exit(1);
}

var result = runToConclusion();

var table = require("gfm-table");

report(result, table, console);
